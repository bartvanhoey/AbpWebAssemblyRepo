    __builder.OpenElement(16, "button");
    __builder.AddAttribute<MouseEventArgs>(17, "onclick", EventCallback.Factory.Create<MouseEventArgs>((object) this, (Func<Task>) (() => this.ViewModel.LanguagePlatformManager.ChangeAsync(language))));
                __builder.AddAttribute(18, "class", "dropdown-item");
